<%- include('includes/nav.ejs') %>
<body>
    
   

    <div class="container">
        <% for (let receta of recetas) { %>
            <div class="recipe-summary">
                <a href="/recipes/recipe-details/<%= receta.id %>">
                    <img src="<%= receta.image %>">
                </a>
                <h2>Nombre: <%= receta.nombre %></h2>
                <p>Tiempo: <%= receta.tiempo %></p>
                <p>Dificultad: <%= receta.dificultad %></p>
                <p>Descripción: <%= receta.descripcion %></p>
                <a href="/recipes/recipe-details/<%= receta.id %>">Leer más</a>
            </div>
        <% } %>

</body>

